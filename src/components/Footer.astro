---
import {
    DISCORD_INVITE,
    GITHUB_URL,
    SOURCE_CODE,
    SPONSOR_URL,
} from "../scripts/constants";
import { Icon } from "astro-icon";
import Theme from "./Theme.svelte";
---

<footer>
    <div class="content">
        <div class="source-and-disclaimer">
            <span class="p-overline-s">
                <a href={SOURCE_CODE}>source code</a>
                <span class="divider">&mdash;</span>
                <span>
                    Discord is trademark of Discord Inc. Vencord is not affiliated
                    or endorsed by Discord Inc.
                </span>
            </span>
        </div>

        <div class="socials">
            <a href="/discord" title="Join Vencord's Discord Server">
                <Icon name="fa-brands:discord" />
            </a>
            <a href="/github" title="Vencord Source Code">
                <Icon name="fa-brands:github" />
            </a>
            <a href="/support" title="Support Vencord's Development">
                <Icon name="fa-regular:heart" />
            </a>
            <Theme>
                <Icon name="fa-regular:sun" slot="light"/>
                <Icon name="fa-regular:moon" slot="dark"/>
            </Theme>
        </div>
    </div>
</footer>

<style>
    .source-and-disclaimer a {
        color: var(--accentPurple);
        text-decoration: none;
    }

    footer {
        margin-top: auto;
        background-color: var(--bg0);
        padding: 1rem;
    }

    .content {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
        margin: 0 1em;
    }

    .source-and-disclaimer {
        display: flex;
        font-weight: 300;
        filter: brightness(80%);
        font-size: 90%;
        margin-right: 1em;
    }

    @media screen and (max-width: 900px) {
        .source-and-disclaimer {
            flex-direction: column;
        }

        .divider {
            display: none;
        }
    }

    .socials {
        display: flex;
        gap: 1em;
    }

    .socials a {
        color: var(--fg0);
    }

    svg {
        width: 1.5em;
        height: 1.5em;
        shape-rendering: auto;
        color: var(--color);
    }

    a:hover svg {
        color: var(--accent);
    }
</style>
